{
  "name": "blueprint-create",
  "private": true,
  "version": "2.0.0",
  "description": "Blueprint Create - A platform for Create Mod community",
  "type": "module",
  "workspaces": [
    "frontend",
    "backend/appwrite/functions/*"
  ],
  "scripts": {
    "dev": "concurrently -n \"frontend,meilisearch\" -c \"blue,yellow\" \"npm run dev:frontend\" \"npm run dev:meilisearch\"",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev:functions",
    "dev:functions": "concurrently -n \"bucket-cleaner,image-compressor,manage-users,parse-nbt\" \"npm run dev --workspace=bucket-cleaner\" \"npm run dev --workspace=image-compressor\" \"npm run dev --workspace=manage-users\" \"npm run dev --workspace=parse-nbt-schematic\"",
    "dev:meilisearch": "echo 'Start Meilisearch locally if needed'",
    "dev:docker": "docker-compose -f docker/docker-compose.dev.yml up",
    "build": "npm run build:frontend",
    "build:frontend": "npm run build --workspace=frontend",
    "build:functions": "npm run build --workspaces --if-present",
    "build:docker": "docker build -t blueprint-create .",
    "lint": "concurrently -n \"frontend,functions\" \"npm run lint:frontend\" \"npm run lint:functions\"",
    "lint:frontend": "npm run lint --workspace=frontend",
    "lint:functions": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspace=frontend",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md,html,yml,yaml}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,scss,md,html,yml,yaml}\" --ignore-path .gitignore",
    "type-check": "npm run type-check --workspace=frontend",
    "preview": "npm run preview --workspace=frontend",
    "install:all": "npm install && npm install --workspaces",
    "clean": "npm run clean:node_modules && npm run clean:dist && npm run clean:cache",
    "clean:node_modules": "rimraf node_modules frontend/node_modules backend/**/node_modules",
    "clean:dist": "rimraf frontend/dist backend/**/dist",
    "clean:cache": "rimraf .npm .cache .parcel-cache",
    "reset": "npm run clean && npm run install:all",
    "update:deps": "npm-check-updates -u && npm run update:deps --workspaces",
    "security:audit": "npm audit --workspaces",
    "security:fix": "npm audit fix --workspaces",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "docker:dev": "docker-compose -f docker/docker-compose.dev.yml up",
    "docker:build": "docker-compose -f docker/docker-compose.yml build",
    "docker:up": "docker-compose -f docker/docker-compose.yml up",
    "docker:down": "docker-compose -f docker/docker-compose.yml down",
    "appwrite:deploy": "npm run deploy --workspaces --if-present",
    "analyze": "npm run analyze --workspace=frontend",
    "check:all": "npm run type-check && npm run lint && npm run format:check"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blueprint-site/blueprint-create.git"
  },
  "keywords": [
    "minecraft",
    "create-mod",
    "schematics",
    "addons",
    "community",
    "react",
    "typescript",
    "appwrite",
    "meilisearch"
  ],
  "author": "Blueprint Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/blueprint-site/blueprint-create/issues"
  },
  "homepage": "https://blueprint.com",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.7",
    "npm-check-updates": "^16.14.20",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "turbo": "^2.0.0",
    "wait-on": "^7.2.0"
  },
  "lint-staged": {
    "frontend/**/*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "backend/**/*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "*.{json,css,scss,md,html,yml,yaml}": [
      "prettier --write"
    ]
  },
  "packageManager": "npm@10.8.2"
}
