{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "build/**"],
      "env": [
        "NODE_ENV",
        "VITE_APPWRITE_URL",
        "VITE_APPWRITE_PROJECT_ID",
        "VITE_MEILISEARCH_URL"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": [],
      "inputs": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx", "**/*.json"]
    },
    "type-check": {
      "outputs": [],
      "inputs": ["**/*.ts", "**/*.tsx", "**/tsconfig.json"]
    },
    "test": {
      "outputs": ["coverage/**"],
      "inputs": ["src/**", "tests/**", "**/*.test.*", "**/*.spec.*"]
    },
    "format": {
      "outputs": [],
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}
